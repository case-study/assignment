<h1>Listing monuments (Collection Name: <%= @collection.name %>)</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monuments.each do |monument| %>
      <tr>
        <td><%= monument.name %></td>
        <td><%= monument.description %></td>
        <td><%= monument.category_list %></td>
        <td><%= link_to 'Show', [monument.collection, monument] %></td>
        <td><%= link_to 'Edit', edit_collection_monument_path(monument.collection, monument) %></td>
        <td><%= link_to 'Destroy', [monument.collection, monument], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Monument', new_collection_monument_path %> |
<%= link_to 'Back to Collections', collections_path %>
