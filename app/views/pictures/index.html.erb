<h1>Listing pictures (Monument Name: <%= @monument.name %>)</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Taken on</th>
      <th>Photo Thumb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.name %></td>
        <td><%= picture.description %></td>
        <td><%= picture.taken_on %></td>
        <td><%= image_tag picture.photo.url(:thumb) %></td>
        <td><%= link_to 'Show', [picture.monument, picture] %></td>
        <td><%= link_to 'Edit', edit_monument_picture_path(picture.monument, picture) %></td>
        <td><%= link_to 'Destroy', [picture.monument, picture], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_monument_picture_path(@monument) %>
